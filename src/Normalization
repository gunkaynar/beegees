import numpy as np
from LoadImage import load_all_images

def normalization():
    r_array, g_array, b_array = load_all_images()
    
    RGBmatrix = np.array([r_array,g_array,b_array])
    
    g_array = np.array([])
    
    for i in range(len(RGBmatrix[0])):
        gs = r_array[i]*0.299 + g_array[i]*0.587 + b_array[i]*0.114
        g_array = np.append(g_array, gs)
    
    return g_array

normalization()
